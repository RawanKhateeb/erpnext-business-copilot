[run]
branch = True
source = app
omit =
    app/mcp_server.py
    app/services/delayed_orders_detector.py
    app/services/po_approval_analyzer.py
    app/services/po_risk_analyzer.py
    app/services/price_anomaly_detector.py
    app/services/recommendation_explainer.py
    app/services/pdf_export.py
    */tests/*
    */__pycache__/*

[report]
precision = 2
skip_covered = False
skip_empty = True
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod

[html]
directory = htmlcov
